<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="client.Controller" VBox.vgrow="ALWAYS"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <VBox fx:id="authPanel" spacing="20" alignment="CENTER">
        <HBox  spacing="10" alignment="CENTER">
            <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="login" maxWidth="200" onAction="#tryToAuth"/>
            <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="password" maxWidth="200" onAction="#tryToAuth"/>
            <Button text="Login" onAction="#tryToAuth" minWidth="100"/>
        </HBox>
        <TextArea fx:id="loginTextArea" maxWidth="520" maxHeight="100" editable="false"/>
    </VBox>

    <HBox fx:id="msgPanel" spacing="10" alignment="CENTER" VBox.vgrow="ALWAYS">
        <GridPane HBox.hgrow="ALWAYS" vgap="10" hgap="10" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TextArea fx:id="textArea" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" editable="false"/>
            <TextField fx:id="textField" GridPane.rowIndex="1" onAction="#sendMsg" GridPane.hgrow="ALWAYS"/>
            <Button text="Отправить" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#sendMsg"/>
        </GridPane>
    </HBox>

</VBox>



